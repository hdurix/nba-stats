{
    "name": "nba-stats",
    "version": "0.0.0",
    "description": "",
    "private": true,
    "license": "UNLICENSED",
    "cacheDirectories": [
        "node_modules"
    ],
    "devDependencies": {
        "husky": "^8.0.3",
        "lint-staged": "^13.2.1",
        "prettier-plugin-java": "^1.0.1"
    },
    "engines": {
        "node": ">=8.9.0"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "{,src/**/}*.java": [
            "prettier --write"
        ]
    },
    "scripts": {
        "prettier:java": "prettier --write \"{,src/**/}*.java\"",
        "prettier:java:watch": "onchange '**/*.java' -- prettier --write {{changed}}",
        "prettier:java:check": "prettier --check \"{,src/**/}*.java\""
    },
    "dependencies": {}
}
